# always include those files
include README
include LICENSE
include requirements.txt
# never include these files
global-exclude *.pyc
global-exclude .DS_Store
global-exclude .ipynb
# add the main package
recursive-include madmom *
recursive-include bin *
# exclude stuff not ready or thoroughly tested
exclude madmom/audio/ffmpeg.py
exclude madmom/evaluation/scorefollowing.py
exclude madmom/evaluation/notes.py
exclude madmom/ml/rnnlib.py
exclude madmom/utils/overparams.py
exclude madmom/utils/stats.py
exclude bin/create_nc_files.py
exclude bin/test_save_files.py
exclude bin/PianoTranscription.py
# never include tests
prune madmom/test
